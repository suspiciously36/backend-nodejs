<h1>Roles Management</h1>
<% if (req.can('roles.create')) { %>
<a href="/roles/add" class="btn btn-primary mb-2">Add role</a>
<% } %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Tên</th>
      <% if (req.can('roles.update')) { %>
      <th width="5%">Sửa</th>
      <% } %> <% if (req.can('roles.delete')) { %>
      <th width="5%">Xóa</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% roles.forEach((role, index) => { %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= role.name %></td>
      <% if (req.can('roles.update')) { %>
      <td>
        <a href="/roles/edit/<%= role.id %>" class="btn btn-warning">Sửa</a>
      </td>
      <% } %> <% if (req.can('roles.delete')) { %>
      <td>
        <form
          action="/roles/delete/<%= role.id %>"
          method="post"
          onsubmit="return confirm('Bạn có chắc?')"
        >
          <button class="btn btn-danger">Xóa</button>
        </form>
      </td>
      <% } %>
    </tr>
    <% }) %>
  </tbody>
</table>
